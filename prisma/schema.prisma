generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(255)
  hash String @db.VarChar(255)
}

model Folder {
  path       String   @id
  name       String   @db.VarChar(255)
  created    DateTime @default(now())
  files      File[]
  children   Folder[] @relation("folderParent")
  parent     Folder?  @relation("folderParent", fields: [parentPath], references: [path])
  parentPath String?
}

model File {
  name       String   @db.VarChar(255)
  mime       String   @db.VarChar(255)
  url        String   @db.VarChar(255)
  size       Int
  uploaded   DateTime @default(now())
  folder     Folder   @relation(fields: [folderPath], references: [path])
  folderPath String

  @@id(name: "fullPath", [name, folderPath])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}