generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  name String @unique
  hash String
}

model Folder {
  id Int @id @default(autoincrement())
  name String
  created DateTime @default(now())
  files File[]
}

model File {
  id Int @id @default(autoincrement())
  name String
  uploaded DateTime @default(now())
  url String
  size Int
  folder Folder @relation(fields: [folderId], references: [id])
  folderId Int
}